<div id="popupCapture" class="popup-overlay" style="display:none;">
  <div class="popup-content">
    <button id="popupClose" class="popup-close">√ó</button>

    <h2>Stay Updated!</h2>
    <p>Enter your details to receive exclusive discounts.</p>

    <form id="popupContactForm">
        <input
          type="email"
          name="email"
          placeholder="Enter your email"
          required
          pattern="^[^@\s]+@[^@\s]+\.[^@\s]+$"
          title="Enter a valid email address"
        />

        <input
          id="phone"
          type="tel"
          name="phone"
          placeholder="Enter your phone"
         
          title="Enter a valid phone number (7-15 digits)"
          required
        />
      <button type="submit">Submit</button>
    </form>

    <div id="popupFormMessage"></div>
  </div>
</div>


<style>
  /* Overlay background */
  #popupCapture.popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  /* Popup box */
  #popupCapture .popup-content {
    background: #fff;
    border-radius: 16px;
    padding: 2rem;
    width: 100%;
    max-width: 420px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    position: relative;
    animation: fadeInScale 0.3s ease;
    text-align: center;
  }

  /* Close button */
  #popupCapture .popup-close {
    position: absolute;
    top: 12px;
    right: 16px;
    background: transparent;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #666;
  }
  #popupCapture .popup-close:hover {
    color: #000;
  }

  /* Headings */
  #popupCapture h2 {
    margin: 0 0 0.5rem;
    font-size: 1.5rem;
    color: #222;
  }
  #popupCapture p {
    margin: 0 0 1.5rem;
    font-size: 0.95rem;
    color: #555;
  }

  /* Form */
  #popupContactForm {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Email & Phone fields */
  #popupContactForm input[type="email"],
  #popupContactForm input[type="tel"] {
    padding: 0.75rem 0.9rem;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 0.95rem;
    width: 100%;
    box-sizing: border-box;
    transition: border-color 0.2s ease;
  }
  #popupContactForm input[type="email"]:focus,
  #popupContactForm input[type="tel"]:focus {
    border-color: #007bff;
    outline: none;
  }

  /* intl-tel-input wrapper styling */
  .iti {
    width: 100%;
  }
  .iti__flag-container {
    border-radius: 8px 0 0 8px;
  }
  .iti input {
    border-radius: 8px;
  }

  /* Submit button */
  #popupContactForm button[type="submit"] {
    background: #007bff;
    color: #fff;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.8rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  #popupContactForm button[type="submit"]:hover {
    background: #0056b3;
  }

  /* Form message */
  #popupFormMessage {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #333;
  }

  /* Animation */
  @keyframes fadeInScale {
    from { transform: scale(0.95); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }
</style>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    localStorage.setItem("CollectForm", "false");
    const popup = document.getElementById("popupCapture");
    const closeBtn = document.getElementById("popupClose");
    const form = document.getElementById("popupContactForm");
    const msg = document.getElementById("popupFormMessage");

    const phoneInput = document.querySelector("#phone");
    // Initialize intl-tel-input
    const iti = window.intlTelInput(phoneInput, {
      initialCountry: "au", // default India üáÆüá≥
      separateDialCode: true, // show dial code next to number
      preferredCountries: ["au", "us", "in"], // like your select list
      utilsScript:
        "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/18.1.1/js/utils.js",
    });

    // Show popup (after 3 seconds), only if not submitted and not shown in last hour
    const COOLDOWN = 60 * 60 * 1000; // 1 hour in ms
    const lastSeen = localStorage.getItem("PopupSeen");
    const now = Date.now();


    // Show popup (after 3 seconds)
    
    if (
      !localStorage.getItem("FormSubmitted") &&
      (!lastSeen || now - parseInt(lastSeen, 10) >= COOLDOWN)
    ) {
      setTimeout(() => {
        popup.style.display = "flex";
        localStorage.setItem("PopupSeen", now.toString());
      }, 3000);
    }
  // Close popup
  closeBtn.addEventListener("click", () => {
    popup.style.display = "none";
    localStorage.setItem("CollectForm", "true"); // Treat as "done"
  });

  // Handle form submit
  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    if (!iti.isValidNumber()) {
      msg.innerText = "Please enter a valid phone number.";
      return;
    }
    const email = form.email.value;
    const phone = iti.getNumber();

    phoneInput.value = phone;
    const formData = new FormData(form);
    formData.append("email", email);
    formData.append("phone", phone);

    try {
      const res = await fetch("/apps/popup/capture", {
        method: "POST",
        body: formData,
      });

      const data = await res.json();

      if (data.success) {
        msg.innerText = "Saved successfully!";
        form.reset();
        localStorage.setItem("FormSubmitted", "true"); 
        popup.style.display = "none";
      } else {
        msg.innerText = "‚ö†Ô∏è " + (data.error || "Something went wrong");
      }
    } catch (err) {
      msg.innerText = "Failed to save contact";
    }
  });
});
</script>

